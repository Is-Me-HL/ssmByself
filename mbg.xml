<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<context id="DB2Tables" targetRuntime="MyBatis3">
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>
		<!-- 配置数据库连接 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/java" userId="root"
			password="root">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 指定javabean的生成位置 -->
		<javaModelGenerator targetPackage="club.hl.pojo"
			targetProject=".\src">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- 指定sql映射文件的生成位置 -->
		<sqlMapGenerator targetPackage="sqlMapper"
			targetProject=".\config">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- 指定到接口的生成位置，mapper接口生成位置 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="club.hl.mapper" targetProject=".\src">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<!-- table指定每个表的生成策略 -->
		<table tableName="book" domainObjectName="book"></table>
	</context>
</generatorConfiguration>